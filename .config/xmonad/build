# ~/.config/xmonad/build
#!/bin/sh

if command -v stack >/dev/null ; then
    exec stack ghc -- \
        --make xmonad.hs \
        -i \
        -ilib \
        -fforce-recomp \
        -main-is main \
        -v0 \
        -o "$1"
else
    exec ghc \
        -dynamic \
        --make xmonad.hs \
        -i \
        -ilib \
        -fforce-recomp \
        -main-is main \
        -v0 \
        -o "$1"
fi
