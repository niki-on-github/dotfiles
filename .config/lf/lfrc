# copy selected file or folder name to clipboard
cmd cp-name ${{
    name=$(basename "$f")
    echo -n "$name" | xclip -selection clipboard
    notify-send "Copy2Clipboard" "$name"
}}

# copy current path to clipboard
cmd cp-path ${{
    echo -n "$PWD" | xclip -selection clipboard
    notify-send "Copy2Clipboard" "$PWD"
}}

cmd rename-by-clipboard ${{
    newName=$(xsel -b | head -n1)
    [ -z "$newName" ] && return
    if [ -f "$newName" ]; then
        n=$((0))
        while [ -f "${newName}-${n}" ]; do
            n=$((n+1))
        done
        newName="${newName}-${n}"
    fi
    eval "mv \"$f\" \"$newName\""
    lf -remote "send $id reload"
}}

# print lf id
cmd get-id %{{
    echo "lf-id: $id"
}}

# rename/change the pane title
cmd rename-title ${{
    printf "\033]2;%s\033\\" "$@"
}}

# open selected files with gui programs
cmd open-gui ${{
    case "$f" in
        *.pdf)      setsid $READER_GUI "$f" >/dev/null 2>&1 & ;;
        *.html)     setsid $BROWSER "$f" >/dev/null 2>&1 & ;;
        *)  # fallback is mime-type
            case $(file --mime-type $f -b) in
                application/pdf)    setsid $READER_GUI "$f" >/dev/null 2>&1 & ;;
                image/*)            setsid $IMAGE_EDITOR "$f" >/dev/null 2>&1 & ;;
                text/*)             setsid $EDITOR_GUI $f >/dev/null 2>&1 & ;;
                *)                  lf -remote "send $id open" ;; # falback is open function
            esac ;;
    esac
}}

# open files with
cmd open ${{
    # Reads file names from stdin and selects them in lf
    lfSelect() {
        while read -r file; do
            [ -z "$file" ] && continue
            [ -e "$file" ] || contine
            lf -remote "send $id select \"$file\""
            lf -remote "send $id toggle"
        done
    }

    open-gif() {
        setsid sxiv -a "$f" &
    }

    open-image() {
        base="$(basename "$f")"
        ls -a "$PWD" | awk -v BASE="$base" 'BEGIN { lines = ""; m = 0; } { if ($0 == BASE) { m = 1; } } { if (!m) { if (lines) { lines = lines"\n"; } lines = lines""$0; } else { print $0; } } END { print lines; }' | \
        grep -i "\.\(png\|jpg\|jpeg\|bmp\|tiff\|webp\|tif\)\(_large\)*$" | setsid sxiv -aio 2>/dev/null | lfSelect &
    }

    open-audio() {
        #clear
        #mpv --vo=null --speed=1.0 $f 2>/dev/null
        ~/.local/bin/play-audio $f
    }

    open-video() {
        setsid mpv $f >/dev/null 2>&1 &
    }

    open-document() {
        setsid $READER $f >/dev/null 2>&1 &
    }

    open-editor() {
        # workaround #6802
        eval "TERM='' $EDITOR \"$f\""
    }

    open-browser() {
        eval "$BROWSER \"$f\""
    }

    case "$f" in
        *.mp3|*.flac|*.m4a) open-audio ;;
        *.mp4|*.mkv) open-video ;;
        *.svg|*.svgz) open-browser ;;
        *.gif) open-gif ;;
        *.png|*.jpg|*.jpeg|*.tif) open-image ;;
        *.pdf) open-document ;;
        *.txt|*.md|*.MD|*.tex|*.html|*.css) open-editor ;;
        *)  # fallback is mime-type
            case $(file --mime-type $f -b) in
                text/*) open-editor ;;
                image/*) open-image ;;
                audio/*) open-audio ;;
                video/*|application/octet-stream) open-video ;;
                application/pdf|application/epub*) open-document ;;
                *) open-editor ;;
            esac ;;
    esac
}}

